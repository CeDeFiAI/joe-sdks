{
  "include": [
    "src",
    "test",
    "../core/src/entities/currency.ts",
    "../core/src/entities/token.ts",
    "../core/test/fraction.test.ts",
    "../core/test/token.test.ts"
  ],
  "compilerOptions": {
    "target": "es2018",
    "module": "esnext",
    "importHelpers": true,
    "declaration": true,
    "sourceMap": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictPropertyInitialization": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",
    "baseUrl": "./",
    "paths": {
      "*": ["src/*", "node_modules/*"]
    },
    "esModuleInterop": true,
    "resolveJsonModule": true
  }
}
